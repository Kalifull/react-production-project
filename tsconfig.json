{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": true,
    "module": "ESNext",
    "strict": true,
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "config/**/*",
    "webpack.config.ts",
    "scripts/**/*",
    "json-server/**/*"
  ],
  "exclude": ["node_modules", "build"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
